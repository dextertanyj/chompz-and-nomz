{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "removeComments": false,
  },
  "exclude": [
    "node_modules"
  ],
}